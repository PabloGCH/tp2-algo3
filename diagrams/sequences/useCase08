@startuml

actor Actor

Actor -> Gladiador : <<Create>> Gladiador()
activate Gladiador
    Gladiador -> Rookie :  <<Create>> Rookie() 
    Gladiador -> Energy : <<Create>> Energy(0)
    Gladiador -> NullEquipment : <<Create>> NullEquipment()
deactivate Gladiador

Actor -> Initial : <<Create>> Initial()
activate Initial 
    Initial -> InitialEffect : <<Create>>
deactivate Initial

Actor -> Initial : receiveGladiator(Gladiator)
activate Initial
    Initial -> Initial : add(Gladiador)
    Initial -> InitialEffect : affect(Gladiador)
deactivate Initial

activate InitialEffect
    InitialEffect -> Gladiador : setInitialEnergy(Energy(20))
deactivate InitialEffect
activate Gladiador
    Gladiador -> Energy : add(Energy(20))
    activate Energy
        Energy -> Energy : getPoints()
        Energy --> Gladiador : Energy(20)
    deactivate Energy
deactivate Gladiador


Actor -> Gladiador : turn()
loop I represent its use 7 times in the use case
activate Gladiador
    Gladiador -> Gladiador : update()
    activate Gladiador

        Gladiador -> Rookie : ascent()
        activate Rookie
            Rookie --> Gladiador : this
        deactivate Rookie

        Gladiador -> Rookie : energyFromExperience(this.energy)
        activate Rookie
            Rookie --> Gladiador : Energy(20)
        deactivate Rookie
    
    deactivate Gladiador
    Gladiador --> Actor : 3 
deactivate Gladiador
end loop

Actor -> Gladiador : turn()
activate Gladiador
    Gladiador -> Gladiador : update()
    activate Gladiador

        Gladiador -> Rookie : ascent()
        activate Rookie
            Rookie --> Gladiador : this
        deactivate Rookie

        Gladiador -> Rookie : energyFromExperience(this.energy)
        activate Rookie
            Rookie -> Energy : add(Energy(5))
            Rookie --> Gladiador : Energy(25)
        deactivate Rookie

    deactivate Gladiador
    Gladiador --> Actor : 3 
deactivate Gladiador

Actor -> Gladiador : getEnergy
activate Gladiador
Gladiador --> Actor : Energy()
deactivate Gladiador

Actor -> Energy : getPoints
activate Energy
Energy --> Actor : 25
deactivate Energy

@enduml